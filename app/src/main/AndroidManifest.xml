<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.safecounts.safecounts">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_directions_bike_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_directions_bike_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Safe Driving Counts"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".speed_database"
            android:label="All Speed Captures"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".live"
            android:label="Live"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".analysis"
            android:label="Analysis"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".driving_safety_score"
            android:label="Driving Safety Score"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".help"
            android:label="Help"
            android:parentActivityName=".MainActivity">
        </activity>
    </application>

</manifest>